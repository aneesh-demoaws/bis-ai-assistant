[Unit]
Description=BIS AI Newsletter Assistant
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/bis-assistant
Environment=AWS_REGION=eu-west-1
Environment=STRANDS_KNOWLEDGE_BASE_ID=MNAX9DFME0
ExecStart=/usr/bin/python3 -m uvicorn app:app --host 0.0.0.0 --port 80
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
